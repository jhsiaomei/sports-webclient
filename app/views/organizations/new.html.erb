<%= form_tag '/organizations', method: :post do %>
  <div class="form-group">
    <%= label_tag :school %>
    <%= text_field_tag :school, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :color %>
    <%= text_field_tag :color, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :logo %>
    <%= text_field_tag :logo, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :motto %>
    <%= text_field_tag :motto, nil, class: "form-control" %>
  </div>
  <div>
    <%= button_tag 'Submit', class: "btn btn-default" %>
  </div>
<% end %>